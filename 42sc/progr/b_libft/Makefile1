CC = gcc -c
CFLAGS = -Wall -Wextra -Werror -g

NAME=libft.a

AR = ar rc

SRCS=*.c
HEADER=libft.h

OBJ = $(SRCS:.c=.o)

all:
		$(NAME)

$(NAME):
		$(CC) $(CFLAGS) $(SRCS) -I$(HEADER)
		$(AR) $(NAME) $(OBJ)
		ranlib $(NAME)

clean:
		/bin/rm -f $(OBJ)

fclean: clean
		/bin/rm -f $(NAME)

re: fclean all
